{{> top-nav-bar}}
{{> top-logo-bar}}

<article id="countdown" class="c">
	<h2>{{cTitle}}</h2>
	{{#if percentageVisible}}
	<div class="bar">
		<span class="label">{{cPercentage}}% completed</span>
	  <span class="fill" style="transform: translateX({{cPercentageBarValue}}%); animation: progress {{remainingSeconds}}s linear 1 forwards;"></span>
	</div>
	{{/if}}
	<p>x days, y hours, z minutes and z seconds left</p>
	<p>Ending at {{cEndDate}}</p>
	<p>{{cDescription}}</p>
</article>
{{#if tweetsVisible}}
<section id="tweets" class="dark">
	<h2>{{cHashtags}}</h2>
	<ul class="col3 c t">
		{{#each tweets}}
		<li>
			<article class="card">
				<h3>{{user.name}} (@{{user.screen_name}})</h3>
				<time>{{created_at}}</time>
				<p>{{text}}</p>
			</article>
		</li>
		{{/each}}
	</ul>
</section>
{{/if}}
