<section id="cta" class="c">
	<img src="/assets/soon-10k-logo.svg" alt="Soon logo" />
	<h2>
  	A simple, social and blazingly fast countdown plattform!
	</h2>
	<a href="/create" class="butt">Create a Countdown</a>
</section>
<div class="ex dark">
	<section class="c">
		<aside class="card">
			<div class="head">
				<h2>Featured Countdowns</h2>
			</div>
			<ul class="body">
				{{#each featured}}
					<li>
						<a href="/c/{{uuid}}">
							<h3>{{title}} ({{timeFromNow endTimestamp}})</h3>
							<div class="bar small">
								<span class="fill" style="transform: translateX({{barAnimationPercentage startTimestamp endTimestamp}}%); animation: progress {{barAnimationSeconds endTimestamp}}s linear 1 forwards;"></span>
							</div>
						</a>
					</li>
				{{/each}}
			</ul>
		</aside>
	</section>
	<section class="col3 c">
		<aside class="card">
			<div class="head">
				<h2>Ending Soon</h2>
			</div>
			<ul class="body">
				{{#each ending}}
					<li><a href="/c/{{uuid}}">{{title}} ({{timeFromNow endTimestamp}})</a></li>
				{{/each}}
			</ul>
		</aside>
		<aside class="card">
			<div class="head">
				<h2>Recently Added</h2>
			</div>
			<ul class="body">
				{{#each recent}}
					<li><a href="/c/{{uuid}}">{{title}} ({{timeFromNow endTimestamp}})</a></li>
				{{/each}}
			</ul>
		</aside>
	</section>
</div>
